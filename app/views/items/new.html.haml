%h2 Create New Movie

= form_tag items_path do

  = label :item, :title, 'Title'
  = text_field :item, 'title'

  = label :item, :rating, 'Rating'
  = select :item, :rating, ['G','PG','PG-13','R','NC-17']

  = label :item, :release_date, 'Released On'
  = date_select :item, :release_date

  = submit_tag 'Save Changes', :class => 'btn btn-primary'
