-# in app/views/items/show.html.haml

%h3 Details about #{@item.name}

%ul#details
  %li
    Category:
    = @item.category
  %li
    Quantity:
    = @item.quantity
  %li
    Condition:
    = @item.condition

%h4 Description:
%p#description= @item.description
= link_to 'View Item List', "/items/#{@item.name}/show_specific_item_list/#{@item.name}", :specific_item_name => '#{@item.name}'

%h4 Additional Options:

= form_tag item_path(@item), :method => :put do
  = label :item, :quantity, 'Quantity'
  = text_field :item, 'quantity'
  = submit_tag 'Update Item', :class => 'btn btn-primary'

= link_to 'Edit', edit_item_path(@item)
= link_to 'Back to All Items List', items_path
